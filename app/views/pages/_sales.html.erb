<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Date</th>
      <th scope="col">Buyer</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.artwork.title %></td>
        <td><%= time_ago_in_words(sale.created_at) %> ago</td>
        <td>$<%= sale.buyer_email %></td>
      </tr>
    <% end %>
  </tbody>
</table>