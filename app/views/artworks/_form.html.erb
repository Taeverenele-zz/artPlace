<%= simple_form_for(@artwork, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :description %>
  <%= f.input :image %>
  <%= f.input :price, hint: ("Enter price in cents") %>
  <%= f.button :submit, class: 'btn btn-outline-info btn-block' %>
<% end %>
