<div class="col-md-3 text-center card p-0">
  <div class="thumbnail card-img-top">
    <%= cl_image_tag(artwork.image.key, height: 300, crop: :scale, cloud_name: 'duclcz5tg', class: 'img-fluid') %>
  </div>
  <div class="card-body">
    <h3><%= link_to artwork.title, artwork_path(artwork) %></h3>
    <p>$<%= artwork.price %></p>
  </div>
</div>